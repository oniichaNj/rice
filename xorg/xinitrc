#!/bin/sh

#go swede
setxkbmap se

#fonts - TODO - this shit does not work
xset +fp /usr/share/fonts
xset fp rehash

#stuffy junk
while true ; do
    xsetroot -name "$(acpi -b | awk 'sub(/,/,"") {print $3, $4}')"
    sleep 1m
done &

# MOAR RICE
compton --config ~/.compton.conf -b

#apply dem smexy colors
xrdb -merge ~/.Xresources

#we need a god damn catboy as a wallpaper. Why? Because FUCK YOU, that's why
feh --bg-fill /home/kitty/images/wallpaper/Neko7.4.png

#and why the fuck aren't YOU using dwm?

while true; do
    dwm >/dev/null 2>&1
done

#exec twm
#exec openbox
#Oh, and dmenu is nice ^______^
exec dmwnu_run &

#no EOF here fuck you
